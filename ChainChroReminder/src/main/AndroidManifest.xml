<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evilusage.chainchro_reminder"
    android:versionCode="101"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.evilusage.chainchro_reminder.ChainChroReminderActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.evilusage.chainchro_reminder.ChainChroReminderReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.evilusage.chainchro_reminder.ALERT_AP" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.evilusage.chainchro_reminder.ALERT_DAYBREAK" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.evilusage.chainchro_reminder.ALERT_SOUL" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.evilusage.chainchro_reminder.ALERT_HALFSOUL" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.evilusage.chainchro_reminder.ALERT_EXPL" />
            </intent-filter>
        </receiver>
    </application>

</manifest>